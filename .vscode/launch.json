{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "FastAPI Development Server",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/backend/main.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/backend",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/backend",
                "DATABASE_URL": "postgresql://flowdesk_user:flowdesk_password_2024@localhost:5432/flowdesk",
                "SECRET_KEY": "dev-secret-key-change-in-production",
                "ENVIRONMENT": "development"
            },
            "args": [],
            "justMyCode": true
        },
        {
            "name": "Run Tests",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/backend",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/backend",
                "DATABASE_URL": "postgresql://flowdesk_user:flowdesk_password_2024@localhost:5432/flowdesk_test",
                "SECRET_KEY": "test-secret-key",
                "ENVIRONMENT": "testing"
            },
            "args": [
                "-v",
                "--tb=short"
            ],
            "justMyCode": false
        },
        {
            "name": "Debug Current Test File",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/backend",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/backend",
                "DATABASE_URL": "postgresql://flowdesk_user:flowdesk_password_2024@localhost:5432/flowdesk_test",
                "SECRET_KEY": "test-secret-key",
                "ENVIRONMENT": "testing"
            },
            "args": [
                "${file}",
                "-v",
                "-s"
            ],
            "justMyCode": false
        }
    ],
    "compounds": [
        {
            "name": "Launch Full Stack",
            "configurations": ["FastAPI Development Server"],
            "preLaunchTask": "start-databases",
            "stopAll": true
        }
    ]
}