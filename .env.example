# Environment Configuration for FlowDesk

# Database
DATABASE_URL=postgresql://flowdesk_user:flowdesk_password_2024@localhost:5432/flowdesk

# Redis
REDIS_URL=redis://localhost:6379/0

# Security
SECRET_KEY=your-super-secret-key-change-in-production-make-it-long-and-random
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Email Settings
SENDGRID_API_KEY=your-sendgrid-api-key
FROM_EMAIL=noreply@yourcompany.com
ADMIN_EMAIL=admin@yourcompany.com

# Application Settings
ENVIRONMENT=development
DEBUG=true
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000", "https://yourdomain.com"]

# File Upload
MAX_FILE_SIZE=10485760  # 10MB
UPLOAD_DIRECTORY=uploads/

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/flowdesk.log